{
  "manifest_version": 3,
  "name": "My React Extension",
  "version": "1.0",
  "description": "A Chrome extension using React",
  "permissions": ["activeTab", "scripting", "tabs", "bookmarks"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [""],
      "css": [""]
    }
  ],
  "action": {
    "default_popup": "popup/build/index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
